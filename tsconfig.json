{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"]
    },
    "resolveJsonModule": true
  },
  "include": [".astro/types.d.ts", "src/**/*", "scripts/**/*", "astro.config.mjs"],
  "exclude": ["dist", "fern", "node_modules"]
}
