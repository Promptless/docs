---
import { ArrowUpRight, Link2 } from '@lucide/astro';

interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<a class="pl-free-tool-card" href={href}>
  <span class="pl-free-tool-card-icon" aria-hidden="true">
    <Link2 size={18} stroke-width={2} />
  </span>
  <span class="pl-free-tool-card-content">
    <span class="pl-free-tool-card-title">{title}</span>
    <span class="pl-free-tool-card-description">{description}</span>
  </span>
  <ArrowUpRight class="pl-free-tool-card-arrow" size={18} stroke-width={2} aria-hidden="true" />
</a>
