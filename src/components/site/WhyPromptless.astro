---
import { Zap, Camera, Pen, Quote, MessageCircle, Plug } from '@lucide/astro';

interface Capability {
  title: string;
  description: string;
  icon: typeof Zap;
}

interface Props {
  capabilities?: Capability[];
}

const defaultCapabilities: Capability[] = [
  {
    title: 'Proactive, Automatic Updates',
    description:
      'PRs, Slack threads, and support tickets kick off doc updates automatically. No prompting required.',
    icon: Zap,
  },
  {
    title: 'Screenshot Capture',
    description:
      'Auto-regenerates screenshots when the UI changes. Complete with crops and annotations.',
    icon: Camera,
  },
  {
    title: 'Writes Like Your Team',
    description:
      'Matches the style of your existing docs, or plug in your style guide and vale rules. No AI slop.',
    icon: Pen,
  },
  {
    title: 'Full Citations and Explanations',
    description:
      'Every suggestion has in-line citations to code functions, Slack conversations, websites, or support tickets.',
    icon: Quote,
  },
  {
    title: 'Learns From Your Feedback',
    description:
      'Every time you leave a comment, reject a suggestion, or message Promptless with feedback, Promptless gets better.',
    icon: MessageCircle,
  },
  {
    title: 'Works With Your Stack',
    description:
      'Plugs into your existing docs platform, repos, and tools. Promptless adapts to your workflows, not vice versa.',
    icon: Plug,
  },
];

const { capabilities = defaultCapabilities } = Astro.props;
---

<section id="capabilities" class="pl-site-why" aria-label="Capabilities">
  <p class="pl-site-kicker">Capabilities</p>
  <h2>Built for docs teams, not prompt engineers</h2>
  <div class="pl-site-why-grid">
    {
      capabilities.map((cap) => (
        <article class="pl-site-why-card">
          <div class="pl-site-why-icon">
            <cap.icon size={20} />
          </div>
          <h3>{cap.title}</h3>
          <p>{cap.description}</p>
        </article>
      ))
    }
  </div>
</section>
