---
import type { CompareRow } from './pricing.config';

interface Props {
  rows: CompareRow[];
}

const { rows } = Astro.props;
---

<section class="pl-pricing-compare" id="plan-comparison" aria-label="Plan comparison">
  <h3>Compare plans</h3>
  <div class="pl-pricing-compare-wrap">
    <table class="pl-pricing-compare-table">
      <thead>
        <tr>
          <th scope="col">Feature</th>
          <th scope="col">Startup</th>
          <th scope="col">Growth</th>
          <th scope="col">Enterprise</th>
        </tr>
      </thead>
      <tbody>
        {
          rows.map((row) => (
            <tr>
              <th scope="row">{row.feature}</th>
              <td>{row.startup}</td>
              <td>{row.growth}</td>
              <td>{row.enterprise}</td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>
</section>
