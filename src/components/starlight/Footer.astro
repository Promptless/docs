const currentYear = new Date().getFullYear();
---

{
  showWebsiteFooter && (
    <footer class="pl-site-footer" role="contentinfo">
      <div class="pl-site-footer-inner">
        <p>
          Support: <a href="mailto:hello@gopromptless.ai">help@promptless.ai</a>
        </p>
        <p>
          <a href="https://promptless.ai/privacy" target="_blank" rel="noopener noreferrer">
            Privacy Policy
          </a>
        </p>
        <p>Copyright Â© {currentYear} Promptless</p>
      </div>
    </footer>
  )
}
