---
import type { TopNavIcon } from '@lib/site-navigation';

interface Props {
  name: TopNavIcon;
  class?: string;
}

const { name, class: className } = Astro.props;
---

<svg
  class:list={['pl-site-tab-icon', className]}
  width="18"
  height="18"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  aria-hidden="true"
>
  {name === 'website' ? (
    <>
      <path d="M3 9.5 12 3l9 6.5" />
      <path d="M5.5 10.5V20.5H18.5V10.5" />
      <path d="M10 20.5V14H14V20.5" />
    </>
  ) : null}
  {name === 'docs' ? (
    <>
      <path d="M4 5.5A2.5 2.5 0 0 1 6.5 3H20V19H6.5A2.5 2.5 0 0 0 4 21V5.5Z" />
      <path d="M8 7.5H16" />
      <path d="M8 11H16" />
      <path d="M8 14.5H13" />
    </>
  ) : null}
  {name === 'blog' ? (
    <>
      <rect x="3" y="4" width="18" height="16" rx="2" />
      <path d="M7 8H12" />
      <path d="M7 11.5H12" />
      <path d="M7 15H12" />
      <rect x="14.5" y="8" width="3.5" height="7" rx="0.5" />
    </>
  ) : null}
  {name === 'changelog' ? (
    <>
      <circle cx="12" cy="12" r="8" />
      <path d="M12 8V12L14.8 13.8" />
    </>
  ) : null}
</svg>
