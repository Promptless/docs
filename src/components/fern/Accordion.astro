---
export interface Props {
  title: string;
  defaultOpen?: boolean;
}

const { title, defaultOpen = false } = Astro.props;
---

<details class="fern-accordion-item" open={defaultOpen}>
  <summary class="fern-accordion-summary">{title}</summary>
  <div class="fern-accordion-content">
    <slot />
  </div>
</details>
